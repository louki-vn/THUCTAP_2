                            {
                                int biggest = popular[0];
                                int k = 0;
                                for (int j = 0; j < ViewBag.qty; j++)
                                {
                                    if (popular[j] > biggest)
                                    {
                                        k = j;
                                        biggest = popular[j];
                                    }
